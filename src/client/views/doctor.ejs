                                                                               dateForSlotsCount.setHours(hoursCount);
                                                                
                                                                
                                                                               dateForSlotsCount.setHours(dateForSlotsCount.getHours() + 5);
                                                                
                                                                
                                                                               dateForSlotsCount.setMinutes(minutesCount);
                                                                
