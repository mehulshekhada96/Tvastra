								dateForSlots.setHours(dateFromServer.getHours() + 5);
								dateForSlots.setMinutes(dateFromServer.getMinutes() + 30);
								


								%>
								<% for(let j = 0; j < 7; j++) { %>

										
									<% 
									let subslots = [];
									let morningSlots = [];
									let morningDoctor = [];
									let afternoonSlots = [];
									let afternoonDoctor = [];
